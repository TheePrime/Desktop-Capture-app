{
  "manifest_version": 3,
  "name": "Capture Helper",
  "version": "0.1.0",
  "description": "Extract post text from LinkedIn/X and send to local app.",
  "permissions": ["activeTab", "scripting", "storage", "nativeMessaging"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*",
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}

